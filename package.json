{
  "name": "dandart",
  "version": "1.0.0",
  "description": "Dan Dart's Web Site",
  "main": "js/index.js",
  "scripts": {
    "build-template": "pug templates/index.pug -o .site",
    "copy-static": "mkdir -p .site && cp -r static/* .site/",
    "get-external-font": "wget -4 -O external/caudex.css -c https://fonts.googleapis.com/css?family=Caudex",
    "build-css": "mkdir -p .site/css external && npm run get-external-font && uncss -H .site -C . -s external/caudex.css,node_modules/bootstrap/dist/css/bootstrap.min.css,node_modules/@jolharg/website-theme/css/style.css,css/style.css < .site/index.html > .site/css/style.css",
    "build": "npm run copy-static && npm run build-template && npm run build-css",
    "deploy": "npm run build && gh-pages -d .site",
    "start": "npm run build && serve .site"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danwdart/dandart.git"
  },
  "keywords": [
    "dan",
    "dart",
    "web",
    "site",
    "website"
  ],
  "author": "Dan Dart <npm@dandart.co.uk>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/danwdart/dandart/issues"
  },
  "homepage": "https://github.com/danwdart/dandart#readme",
  "devDependencies": {
    "gh-pages": "^2.0.1",
    "jstransformer-markdown-it": "^2.1.0",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "uncss": "^0.16.2"
  },
  "dependencies": {
    "@jolharg/website-theme": "0.0.3",
    "bootstrap": "^4.1.3",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.5",
    "serve": "^10.0.0"
  }
}
