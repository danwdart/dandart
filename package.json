{
  "name": "dandart",
  "version": "1.0.0",
  "description": "Dan Dart's Web Site",
  "main": "js/index.js",
  "scripts": {
    "build:static": "mkdir -p .site && cp -r static/* .site/ && cp -r node_modules/@fortawesome/fontawesome-free/webfonts .site/",
    "get-external-font": "wget -O external/caudex.css https://fonts.googleapis.com/css?family=Caudex",
    "build:css": "mkdir -p .site/css external && npm run get-external-font && uncss -H .site -C . -s external/caudex.css,node_modules/bootstrap/dist/css/bootstrap.min.css,node_modules/@fortawesome/fontawesome-free/css/all.min.css,node_modules/@jolharg/website-theme/css/style.css,css/style.css < .site/index.html > .site/css/style.css",
    "build:render": "pug templates/index.pug -o .site",
    "build": "npm run build:static && npm run build:render && npm run build:css && echo Done",
    "deploy": "npm run build && gh-pages -d .site",
    "start": "npm run build && serve -d -n -s .site"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danwdart/dandart.git"
  },
  "keywords": [
    "dan",
    "dart",
    "web",
    "site",
    "website"
  ],
  "author": "Dan Dart <npm@dandart.co.uk>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/danwdart/dandart/issues"
  },
  "homepage": "https://github.com/danwdart/dandart#readme",
  "devDependencies": {
    "gh-pages": "^2.1.1",
    "jstransformer-markdown-it": "^2.1.0",
    "pug": "^2.0.4",
    "pug-cli": "^1.0.0-alpha6",
    "uncss": "^0.17.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.12.0-1",
    "@jolharg/website-theme": "^0.0.5",
    "bootstrap": "^4.3.1",
    "jquery": "^3.4.1",
    "popper.js": "^1.16.0",
    "serve": "^11.2.0"
  }
}
